generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id          String   @id @default(uuid())
  full_name   String
  email       String?  @unique
  phone       String?
  access_role String?
  is_active   Boolean  @default(true)
  workstation String?
  created_at  DateTime @default(now())

  department_id String?
  department    Department? @relation(fields: [department_id], references: [id])

  position_id String?
  position    Position? @relation(fields: [position_id], references: [id])

  workflows Workflow[]

  @@map("users")
}

model Workflow {
  id          String  @id @default(uuid())
  title       String
  description String?
  objectives  String?
  documents   Json    @default("[]")
  structure   Json    @default("[]")
  sort_order  Int     @default(0)

  user_id String
  author  User   @relation(fields: [user_id], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([title])
  @@map("workflows")
}

model Department {
  id               String  @id @default(uuid())
  uorg_code        String  @unique
  initials         String
  name             String
  email            String?
  phone            String?
  responsibilities String?
  competencies     String?

  members User[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("departments")
}

model Position {
  id                 String  @id @default(uuid())
  name               String
  occupied_positions Int     @default(0)
  summary            String?
  activities         String?

  members User[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("positions")
}
