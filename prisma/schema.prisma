generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x"]
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [unaccent]
}

model User {
  id          String   @id @default(uuid())
  full_name   String
  email       String?  @unique
  phone       String?
  access_role String?
  is_active   Boolean  @default(true)
  workstation String?
  photo_url   String?
  dt_exercicio  DateTime?
  service_hours    String?
  created_at  DateTime @default(now())

  department_id String?
  department    Department? @relation(fields: [department_id], references: [uorg_code])

  position_id String?
  position    Position? @relation(fields: [position_id], references: [id])

  workflows Workflow[]

  @@map("users")
}

model Workflow {
  id          String  @id @default(uuid())
  title       String
  description String?
  objectives  String?
  documents   Json?    @default("[]")
  structure   Json?    @default("[]")
  sort_order  Int     @default(0)

  user_id String
  author  User   @relation(fields: [user_id], references: [id])

  department_id String
  department  Department  @relation(fields: [department_id], references: [uorg_code])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([title])
  @@map("workflows")
}

model Department {
  uorg_code        String  @id
  parent_code      String?
  initials         String
  name             String
  email            String?
  phone            String?
  responsibilities String?
  competencies     String?
  service_hours    String?
  faq              Json?    @default("[]")
  documents        Json?    @default("[]")

  members User[]
  workflows Workflow[]

  parent           Department?  @relation("DepartmentHierarchy", fields: [parent_code], references: [uorg_code])
  children         Department[] @relation("DepartmentHierarchy")

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("departments")
}

model Position {
  id                 String  @id @default(uuid())
  name               String
  occupied_positions Int     @default(0)
  summary            String?
  activities         String?

  members User[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("positions")
}
